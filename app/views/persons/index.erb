<div class = "row">
    <div class = "col-sm-12"><h2 style = "text-align: center;">Professional Connections</h2></div>
</div>

<% if @persons.count == 0 %>
    <% if @from_recent == 1 %>
        <p>You have not added any professional connections recently.  Log an interaction to create a new connection.</p>
    <% else %>
        <p>You do not have any professional connections yet.  Log an interaction to create a new conection.</p>
    <% end %>
<% else %>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
            <% @persons.each do |person| %>
                <tr>
                    <td><a style = "color:#6d4e3b;" href = "/persons/<%= person.id %>"><%= person.name %></a></td>
                    <td><%= person.company_name %></td>
                    <td><a href = "mailto: <%= person.email %>"><%= person.email %></a></td>
                    <td><%= person.phone %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<a class="btn btn-outline-dark" href = "/interactions/new" role = "button">New Interaction</a>




