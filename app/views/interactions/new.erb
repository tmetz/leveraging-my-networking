<h1>Log a new interaction</h1>

<form action="/interactions" method="POST">

    <div class = "form-row">
        <div class = "col">
            <input type = "text" class = "form-control" name = "interaction[year]" id = "year" placeholder = "Year"></input>
        </div>
        <div class = "col">
            <input type = "text" class = "form-control" name = "interaction[month]" id = "month" placeholder = "Month"></input>
        </div>
        <div class = "col">
            <input type = "text" class = "form-control" name = "interaction[day]" id = "day" placeholder = "Day"></input>
        </div>
    </div>
    <br>
    <div class = "form-row">
        <div class = "col">
            <textarea class = "form-control" name="interaction[notes]" id="notes" placeholder = "Notes about interaction"></textarea>
        </div>
    </div>

  <br>
    <label>Choose an existing professional connection:</label><br>
    
        <% @people.each do |person| %>
            <div class = "form-check">
                <input class="form-check-input" type="radio" name="interaction[person_id]" id="<%=person.name%>" value="<%=person.id%>">
                <label class="form-check-label" for="<%=person.name%>">
                    <%= person.name %>
                </label>
            </div>
        <% end %>

        <input class="form-check-input" type="radio" name="interaction[person_id]" value="0" checked>
        <label class="form-check-label">
            or, create a new connection:
        </label>

    <br>
    <div class = "form-row">
        <div class = "col">
            <input type = "text" class = "form-control" name="person[name]" id="name" placeholder = "Connection's Name"></input>
        </div>
        <div class = "col">
            <input type = "text" class = "form-control" name="person[company_name]" id="company_name" placeholder = "Company Name"></input>
        </div>
    </div>
    <br>
    <div class = "form-row">
        <div class = "col">
            <input type = "text" class = "form-control" name="person[subjects]" id="subjects" placeholder = "Relevant Subjects (e.g. Java, Python, Linux)"></input>
        </div>
        <div class = "col">
            <input type = "text" class = "form-control" name="person[meeting_place]" id="meeting_place" placeholder = "Where did you meet?"></input>
        </div>
    </div>
    <br>
    <div class = "form-row">
        <div class = "col">
            <input type = "text" class = "form-control" name="person[email]" id="email" placeholder = "email@address.com"></input>
        </div>
        <div class = "col">
            <input type = "text" class = "form-control" name="person[phone]" id="phone" placeholder = "555-555-5555"></input>
        </div>
    </div>
    <br>
    <div class = "form-row">
        <div class = "col">
            <input type = "text" class = "form-control" name="person[linkedin]" id="linkedin" placeholder = "LinkedIn URL"></input>
        </div>
    </div>

  <br>
  <br>

  <input type="submit" value="Log Interaction" class="btn btn-outline-dark">
</form>